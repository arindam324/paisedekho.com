generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @unique @default(uuid())
  name     String
  image    String @default("https://i.pravatar.cc/150?img=68")
  email    String @unique
  password String
  role     Role   @default(User)
}

enum Role {
  Admin
  User
}

model Products {
  id           String @id @unique @default(uuid())
  title        String
  description  String
  redirectText String
}

model WhyUs {
  id          String @id @default(uuid())
  title       String
  description String
}

model Banner {
  id  String @id @default(uuid())
  src String
}
